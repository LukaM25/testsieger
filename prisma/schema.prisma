generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  passwordHash String
  address      String?
  createdAt    DateTime  @default(now())
  products     Product[]
  orders       Order[]
}

model Product {
  id          String        @id @default(cuid())
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  name        String
  brand       String
  code        String?
  specs       String?
  size        String?
  madeIn      String?
  material    String?
  status      ProductStatus @default(PRECHECK)
  createdAt   DateTime      @default(now())
  certificate Certificate?
  orders      Order[]
}

enum ProductStatus {
  PRECHECK
  PAID
  IN_REVIEW
  COMPLETED
}

model Order {
  id              String    @id @default(cuid())
  user            User      @relation(fields: [userId], references: [id])
  userId          String
  product         Product   @relation(fields: [productId], references: [id])
  productId       String
  plan            Plan
  priceCents      Int
  stripeSessionId String?   @unique
  stripeSubId     String?
  createdAt       DateTime  @default(now())
  paidAt          DateTime?
}

enum Plan {
  BASIC
  PREMIUM
  LIFETIME
}

model Certificate {
  id        String   @id @default(cuid())
  product   Product  @relation(fields: [productId], references: [id])
  productId String   @unique
  pdfUrl    String
  qrUrl     String
  createdAt DateTime @default(now())
}
